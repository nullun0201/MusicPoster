<p style="color: green"><%= notice %></p>
<div id="show" class="big-bg">

<p>
<br>
  <strong>Name:</strong>
  <%= @content.name %>
</p>

<p>
<br>
  <strong>Body:</strong>
  <%= @content.body %>
</p>

<p>
<br>
  <strong>File:</strong>
  <audio src= <%= @content.file %> controls="">
  </audio>
</p>
<p><%= link_to "edit", edit_content_path(@content) %>

<h2>コメント一覧<h2>
  <% @content.comments.each do |comment| %>
    <p><%= comment.comment %></p>
  <% end %>
<br>
<h2>コメント投稿<h2>
<%= form_with(model:[ @content, @content.comments.build ], local:true) do |form| %>

    <div class="form-group">
        <p>
            <!--<%= form.label 'コメント(255文字未満)' %>-->
            <%= form.text_area :comment,class: 'form-control' %>
        </p>
    </div>
    <div class="form_action row">
        <%= form.submit 'コメント投稿',class: 'btn btn-primary' %>
    </div>
<% end %>


<div>
